		@ez80.calminstruction ret.suffixname lhs
			match , lhs
			jyes unconditional
			isindirect lhs
			jyes errindirection
			compute lhs, lhs
			check lhs eq lhs element 1 & lhs isreg.breg & \
			      lhs metadata 1 scale 0 and 007o = 001o
			jno errarguments
			emitsuffix
			emit 1, lhs metadata 1 scale 0 and 070o or 300o
			exit
		unconditional:
			emitsuffix
			emit 1, 311o
			exit
		errindirection:
			err 'invalid indirection'
			exit
		errarguments:
			err 'invalid arguments'
		end calminstruction

		iterate name, pop, push
			repeat 1, wordencoding: 275o + % shl 2
				@ez80.calminstruction name.suffixname rhs&
				loop:
					split lhs, rhs
					isindirect lhs
					jyes errindirection
					compute lhs, lhs
					check lhs eq lhs element 1 & lhs isreg.wreg & \
					      lhs metadata 1 scale 1 and 001o
					jno effective
					emitsuffix
					indexprefix lhs
					emit 1, lhs metadata 1 scale 0 + wordencoding
					match , rhs
					jno loop
					exit
				effective:
					check lhs relativeto lhs element 1 & lhs isreg.wreg & \
					      lhs metadata 1 scale 1 > 300o
					jno errarguments
					emitsuffix
					emit 1, 355o
					emit 1, lhs metadata 1 scale 1 shr 5 and 001o + 145o
					indexoffset lhs
					match , rhs
					jno loop
					exit
				errindirection:
					err 'invalid indirection'
					exit
				errarguments:
					err 'invalid arguments'
				end calminstruction
			end repeat
		end iterate

		@ez80.calminstruction jp.suffixname lhs*, rhs
			proxy lhs, rhs
			isindirect lhs
			compute lhs, +lhs
			jyes register
			match , rhs
			jyes unconditional
			isindirect rhs
			jyes errindirection
			compute rhs, +rhs
			check lhs eq lhs element 1 & lhs isreg.breg & \
			      lhs metadata 1 scale 0 and 007o = 001o
			jno errcondition
			emitsuffix
			emit 1, lhs metadata 1 scale 0 and 070o or 302o
			execute =@ez80.=word wordsize, @rhs
			exit
		unconditional:
			emitsuffix
			emit 1, 303o
			execute =@ez80.=word wordsize, @lhs
			exit
		register:
			match , rhs
			jno errindirection
			check lhs eq lhs element 1 & lhs isreg.wreg & \
			      lhs metadata 1 scale 0 = 040o
			jno errarguments
			emitsuffix
			indexprefix lhs
			emit 1, 351o
			exit
		errcondition:
			err 'invalid condition'
			exit
		errindirection:
			err 'invalid indirection'
			exit
		errarguments:
			err 'invalid arguments'
		end calminstruction

		@ez80.calminstruction call.suffixname lhs*, rhs
			proxy lhs, rhs
			isindirect lhs
			jyes errindirection
			compute lhs, +lhs
			match , rhs
			jyes unconditional
			isindirect rhs
			jyes errindirection
			compute rhs, +rhs
			check lhs eq lhs element 1 & lhs isreg.breg & \
			      lhs metadata 1 scale 0 and 007o = 001o
			jno errcondition
			emitsuffix
			emit 1, lhs metadata 1 scale 0 and 070o or 304o
			execute =@ez80.=word wordsize, @rhs
			exit
		unconditional:
			emitsuffix
			emit 1, 315o
			execute =@ez80.=word wordsize, @lhs
			exit
		errcondition:
			err 'invalid condition'
			exit
		errindirection:
			err 'invalid indirection'
			exit
		errarguments:
			err 'invalid arguments'
		end calminstruction

		@ez80.calminstruction rst.suffixname lhs*
			isindirect lhs
			jyes errindirection
			compute lhs, lhs
			check lhs = lhs and 070o
			jno errtarget
			emitsuffix
			emit 1, lhs or 307o
			exit
		errindirection:
			err 'invalid indirection'
			exit
		errtarget:
			err 'invalid rst target'
		end calminstruction

		iterate <name*,encoding*>, \
		         rlc  ,000o      , \
		         rrc  ,010o      , \
		         rr   ,030o      , \
		         sla  ,040o      , \
		         sra  ,050o      , \
		         srl  ,070o
			repeat 1, indirectencoding: encoding or 006o
				@ez80.calminstruction name.suffixname lhs*
					isindirect lhs
					compute lhs, lhs
					jyes indirect
					check lhs eq lhs element 1 & lhs isreg.breg & \
					      lhs metadata 1 scale 1 = 003o
					jno errarguments
					emitsuffix
					emit 1, 313o
					emit 1, lhs metadata 1 scale 0 and 007o or encoding
					exit
				indirect:
					check lhs relativeto lhs element 1 & lhs isreg.wreg & \
					      lhs metadata 1 scale 0 = 040o
					jno errarguments
					emitsuffix
					indexprefix lhs
					emit 1, 313o
					indexoffset lhs
					emit 1, indirectencoding
					exit
				errarguments:
					err 'invalid arguments'
				end calminstruction
			end repeat
		end iterate

		@ez80.calminstruction rl.suffixname lhs*
			proxy count
			isindirect lhs
			compute lhs, lhs
			jyes indirect
			check lhs eq lhs element 1 & lhs isreg.breg & \
			      lhs metadata 1 scale 1 = 003o
			jno reserve
			emitsuffix
			emit 1, 313o
			emit 1, lhs metadata 1 scale 0 and 007o or 020o
			exit
		indirect:
			check lhs relativeto lhs element 1 & lhs isreg.wreg & \
			      lhs metadata 1 scale 0 = 040o
			jno reserve
			emitsuffix
			indexprefix lhs
			emit 1, 313o
			indexoffset lhs
			emit 1, 026o
			exit
		reserve:
			check elementsof lhs
			jyes errarguments
			compute count, long? * lhs
			execute =emit? @count: ?
			exit
		errarguments:
			err 'invalid arguments'
		end calminstruction

		iterate name, bit, res, set
			repeat 1, byteencoding: % shl 6, indirectencoding: % shl 6 or 006o
				@ez80.calminstruction name.suffixname lhs*, rhs*
					isindirect lhs
					jyes errindirection
					compute lhs, lhs
					check elementsof lhs
					jyes errarguments
					isindirect rhs
					compute rhs, rhs
					jyes indirect
					check rhs eq rhs element 1
					jno errarguments
					check lhs = lhs and 007o & rhs isreg.breg & \
					      rhs metadata 1 scale 1 = 003o
					jno notbyte
					emitsuffix
					emit 1, 313o
					emit 1, rhs metadata 1 scale 0 and 007o or lhs shl 3 or byteencoding
					exit
				notbyte:
					check lhs = lhs and 017o & rhs isreg.wreg & \
					      rhs metadata 1 scale 1 = 007o
					jno errarguments
					emitsuffix
					emit 1, 313o
					emit 1, lhs shl 3 and 070o or rhs metadata 1 scale 0 shr 3 or \
					        byteencoding or lhs shr 3 xor 001o
					exit
				indirect:
					check rhs relativeto rhs element 1 & rhs isreg.wreg & \
					      rhs metadata 1 scale 0 = 040o
					jno errarguments
					emitsuffix
					indexprefix rhs
					emit 1, 313o
					indexoffset lhs shr 3 + rhs
					emit 1, lhs shl 3 and 070o or indirectencoding
					exit
				errindirection:
					err 'invalid indirection'
					exit
				errarguments:
					err 'invalid arguments'
				end calminstruction
			end repeat
		end iterate

		@ez80.calminstruction out.suffixname lhs*, rhs*
			isindirect lhs
			jno errindirection
			isindirect rhs
			jyes errindirection
			compute lhs, +lhs
			compute rhs, rhs
			check lhs eq bc? | lhs eq c?
			jno immediate
			check rhs eq rhs element 1
			jno errarguments
			check rhs isreg.breg & rhs metadata 1 scale 1 = 003o
			jno notbyteregister
			emitsuffix
			emit 1, 355o
			emit 1, rhs metadata 1 scale 0 shl 3 and 070o or 101o
			exit
		notbyteregister:
			check elementsof rhs
			jyes errarguments
			emitsuffix
			emit 1, 355o
			emit 1, 161o
			exit
		immediate:
			check rhs eq a?
			jno errarguments
			emitsuffix
			emit 1, 323o
			emit 1, lhs
			exit
		errindirection:
			err 'invalid indirection'
			exit
		errarguments:
			err 'invalid arguments'
		end calminstruction

		@ez80.calminstruction in.suffixname lhs*, rhs
			match , rhs
			jyes implicit
			isindirect lhs
			jyes errindirection
		implicitreturn:
			isindirect rhs
			jno errindirection
			compute lhs, lhs
			compute rhs, +rhs
			check rhs eq bc? | rhs eq c? & lhs eq lhs element 1 & lhs isreg.breg & \
			      lhs metadata 1 scale 1 and 002o
			jno immediate
			emitsuffix
			emit 1, 355o
			emit 1, lhs metadata 1 scale 0 shl 3 and 070o or 100o
			exit
		implicit:
			arrange rhs, lhs
			compute lhs, f?
			jump implicitreturn
		immediate:
			check lhs eq a?
			jno errarguments
			emitsuffix
			emit 1, 333o
			emit 1, rhs
			exit
		errindirection:
			err 'invalid indirection'
			exit
		errarguments:
			err 'invalid arguments'
		end calminstruction

		@ez80.calminstruction in0.suffixname lhs*, rhs
			match , rhs
			jyes implicit
			isindirect lhs
			jyes errindirection
		implicitreturn:
			isindirect rhs
			jno errindirection
			compute lhs, lhs
			compute rhs, +rhs
			check lhs eq lhs element 1 & lhs isreg.breg & \
			      lhs metadata 1 scale 1 and 002o
			jno errarguments
			emitsuffix
			emit 1, 355o
			emit 1, lhs metadata 1 scale 0 shl 3 and 070o
			emit 1, rhs
			exit
		implicit:
			arrange rhs, lhs
			compute lhs, f?
			jump implicitreturn
		errindirection:
			err 'invalid indirection'
			exit
		errarguments:
			err 'invalid arguments'
		end calminstruction

		@ez80.calminstruction out0.suffixname lhs*, rhs*
			isindirect lhs
			jno errindirection
			isindirect rhs
			jyes errindirection
			compute lhs, +lhs
			compute rhs, rhs
			check rhs eq rhs element 1 & rhs isreg.breg & \
			      rhs metadata 1 scale 1 = 003o
			jno errarguments
			emitsuffix
			emit 1, 355o
			emit 1, rhs metadata 1 scale 0 shl 3 and 070o or 001o
			emit 1, lhs
			exit
		errindirection:
			err 'invalid indirection'
			exit
		errarguments:
			err 'invalid arguments'
		end calminstruction

		@ez80.calminstruction tstio.suffixname lhs*
			isindirect lhs
			jyes errindirection
			compute lhs, +lhs
			emitsuffix
			emit 1, 355o
			emit 1, 164o
			emit 1, lhs
			exit
		errindirection:
			err 'invalid indirection'
		end calminstruction

		@ez80.calminstruction lea.suffixname lhs*, rhs*
			local offset
			isindirect lhs
			jyes errindirection
			isindirect rhs
			jyes errindirection
			compute lhs, lhs
			compute rhs, rhs
			check lhs eq lhs element 1 & lhs isreg.wreg &         \
			      lhs metadata 1 scale 0 <> 060o &                \
			      rhs relativeto rhs element 1 & rhs isreg.wreg & \
			      rhs metadata 1 scale 1 > 300o
			jno errarguments
			compute offset, rhs scale 0
			check -200o <= offset & offset < 200o
			jno errrange
			check lhs metadata 1 scale 1 = 007o
			jno index
			emitsuffix
			emit 1, 355o
			emit 1, rhs metadata 1 scale 1 shr 5 and 001o or \
			        lhs metadata 1 scale 0 or 002o
			emit 1, offset
			exit
		index:
			check lhs relativeto rhs
			jno different
			emitsuffix
			emit 1, 355o
			emit 1, lhs metadata 1 scale 1 shr 5 and 001o or 062o
			emit 1, offset
			exit
		different:
			emitsuffix
			emit 1, 355o
			emit 1, lhs metadata 1 scale 1 shr 5 and 001o or 124o
			emit 1, offset
			exit
		errindirection:
			err 'invalid indirection'
			exit
		errarguments:
			err 'invalid arguments'
			exit
		errrange:
			err 'offset out of range'
		end calminstruction

		@ez80.calminstruction pea.suffixname lhs*
			local offset
			isindirect lhs
			jyes errindirection
			compute lhs, lhs
			check lhs relativeto lhs element 1 & lhs isreg.wreg & \
			      lhs metadata 1 scale 1 > 300o
			jno errarguments
			compute offset, lhs scale 0
			check -200o <= offset & offset < 200o
			jno errrange
			emitsuffix
			emit 1, 355o
			emit 1, lhs metadata 1 scale 1 shr 5 and 001o + 145o
			emit 1, offset
			exit
		errindirection:
			err 'invalid indirection'
			exit
		errarguments:
			err 'invalid arguments'
			exit
		errrange:
			err 'offset out of range'
		end calminstruction

		@ez80.calminstruction im.suffixname lhs*
			isindirect lhs
			jyes errindirection
			compute lhs, lhs
			check lhs = 1
			jyes one
			check lhs = 2
			jyes two
			check lhs
			jyes errarguments
			emitsuffix
			emit 1, 355o
			emit 1, 106o
			exit
		one:
			emitsuffix
			emit 1, 355o
			emit 1, 126o
			exit
		two:
			emitsuffix
			emit 1, 355o
			emit 1, 136o
			exit
		errindirection:
			err 'invalid indirection'
			exit
		errarguments:
			err 'invalid arguments'
		end calminstruction

		@ez80.calminstruction mlt.suffixname lhs*
			isindirect lhs
			jyes errindirection
			compute lhs, lhs
			check lhs eq lhs element 1 & lhs isreg.wreg & \
			      lhs metadata 1 scale 1 and 002o
			jno errarguments
			emitsuffix
			emit 1, 355o
			emit 1, lhs metadata 1 scale 0 or 114o
			exit
		errindirection:
			err 'invalid indirection'
			exit
		errarguments:
			err 'invalid arguments'
		end calminstruction

		purge calminstruction?.emitsuffix?
	end iterate

	iterate command, isindirect, indexprefix, indexoffset, regsize
		purge calminstruction?.command?
	end iterate

	purge ?
end macro
